# !IPPROOT should be corrected to the existing version IPP in the system

IPP_INC_PATH=$(IPPROOT)\include

TARGETNAME=ippsdrv
TARGETPATH=obj
TARGETTYPE=DRIVER

!if "$(ARCH)" == "ia32"
TARGETLIBS= ..\expdrv\objfre_win7_x86\i386\ippsexp.lib  $(SDK_LIB_PATH)\libcntpr.lib
!else
TARGETLIBS= ..\expdrv\objfre_win7_amd64\amd64\ippsexp.lib  $(SDK_LIB_PATH)\libcntpr.lib
!endif


INCLUDES=$(IPP_INC_PATH);$(DDK_INC_PATH) 

LINKER_FLAGS = $(LINKER_FLAGS) /map

SOURCES=ippsdrv.rc \
        ippsdrv.c  \
        ippsfunc.c \
        ioctl.c
        
USER_C_FLAGS=$(USER_C_FLAGS) /WX-
